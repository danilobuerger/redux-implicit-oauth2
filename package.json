{
  "name": "@intercede/redux-oauth2",
  "version": "1.0.6",
  "description": "OAuth 2.0 Implicit and Authcode Grant with PKCE with Redux. Forked from https://github.com/danilobuerger/redux-implicit-oauth2",
  "keywords": [
    "react",
    "redux",
    "implicit",
    "oauth2",
    "auth",
    "authcode"
  ],
  "author": "",
  "license": "MIT",
  "homepage": "https://svn/svn/MyID_Development/NodePackages/redux-oauth2/trunk/README.md",
  "repository": {
    "type": "svn",
    "url": "https://svn/svn/MyID_Development/NodePackages/redux-oauth2/trunk/"
  },
  "main": "./lib/index.js",
  "files": [
    "dist",
    "lib",
    "src"
  ],
  "dependencies": {
    "cuid": "^2.1.8",
    "fast-sha256": "^1.1.0",
    "query-string": "^7.0.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "babel-loader": "^8.2.2",
    "check-es3-syntax-cli": "^0.2.1",
    "coveralls": "^3.1.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.1",
    "eslint-plugin-jest": "^25.2.2",
    "jest": "^27.3.1",
    "jest-localstorage-mock": "^2.4.18",
    "rimraf": "^3.0.2",
    "webpack": "^5.59.0",
    "webpack-cli": "^4.9.1"
  },
  "scripts": {
    "clean": "rimraf lib dist",
    "lint": "eslint src",
    "build:lib": "babel src --out-dir lib --ignore '**/*.test.js'",
    "build:umd": "cross-env NODE_ENV=development webpack ./src/index.js --output-path ./dist/@intercede --output-filename redux-oauth2.js --mode=development",
    "build:umd:min": "cross-env NODE_ENV=production webpack ./src/index.js --output-path ./dist/@intercede --output-filename redux-oauth2.min.js --mode=production",
    "build": "npm run build:lib && npm run build:umd && npm run build:umd:min",
    "test": "jest --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "prepublishOnly": "npm run clean && npm run lint && npm run build"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFiles": [
      "jest-localstorage-mock"
    ],
    "coverageReporters": [
      "text",
      "text-summary",
      "html",
      "cobertura"
    ],
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  },
  "directories": {
    "lib": "lib"
  }
}
